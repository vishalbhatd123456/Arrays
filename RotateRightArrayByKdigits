class Solution {
    public void rotate(int[] arr, int d) {
       d = d%arr.length;
        reverseArray(arr,0,arr.length-1);
        reverseArray(arr,0,d-1);
        reverseArray(arr,d,arr.length-1);
    }
    
    public static void reverseArray(int[] arr,int start,int end)
    {
        while(start<end)
        {
            int temp = arr[start];
            arr[start] = arr[end];
            arr[end] = temp;
            start++;
            end--;
        }
    }
}
    
    
